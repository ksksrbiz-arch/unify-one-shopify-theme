  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "color_primary_hover",
        "label": "Primary hover color",
        "default": "#0056b3"
      },
      {
        "type": "header",
        "content": "Secondary Colors"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#6c757d"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#28a745"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "color_text_dark",
        "label": "Dark text",
        "default": "#212529"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light text",
        "default": "#6c757d"
      },
      {
        "type": "header",
        "content": "Background Colors"
      },
      {
        "type": "color",
        "id": "color_bg_light",
        "label": "Light background",
        "default": "#f8f9fa"
      },
      {
        "type": "color",
        "id": "color_bg_white",
        "label": "White background",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "assistant_n4"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base font size",
        "default": 16
      }
    ]
  },
  {
    "name": "Logo & Favicon",
    "settings": [
      {
        "type": "header",
        "content": "Logo Settings"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32x32px .png recommended"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "url",
        "id": "social_facebook",
        "label": "Facebook"
      },
      {
        "type": "url",
        "id": "social_instagram",
        "label": "Instagram"
      },
      {
        "type": "url",
        "id": "social_twitter",
        "label": "Twitter / X"
      },
      {
        "type": "url",
        "id": "social_youtube",
        "label": "YouTube"
      },
      {
        "type": "url",
        "id": "social_tiktok",
        "label": "TikTok"
      },
      {
        "type": "url",
        "id": "social_pinterest",
        "label": "Pinterest"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search Settings"
      },
      {
        "type": "checkbox",
        "id": "search_enable",
        "label": "Enable search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_products_only",
        "label": "Show products only in search results",
        "default": false
      }
    ]
  }
]
