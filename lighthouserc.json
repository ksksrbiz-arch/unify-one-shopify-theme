{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "staticDistDir": "./",
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "chromeFlags": ["--disable-gpu", "--no-sandbox", "--chrome-flags=--disable-dev-shm-usage"]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.85,
            "strategy": "median"
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.9,
            "strategy": "median"
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.87,
            "strategy": "median"
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.9,
            "strategy": "median"
          }
        ],
        "first-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2000,
            "strategy": "median"
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2500,
            "strategy": "median"
          }
        ],
        "cumulative-layout-shift": [
          "warn",
          {
            "maxNumericValue": 0.1,
            "strategy": "median"
          }
        ],
        "total-blocking-time": [
          "warn",
          {
            "maxNumericValue": 300,
            "strategy": "median"
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "serverBaseUrl": "https://storage.googleapis.com"
    },
    "summary": true
  }
}
