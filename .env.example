# Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# Shopify Store Configuration
SHOPIFY_STORE_NAME=1commerce.shop
SHOPIFY_THEME_TOKEN=your_token_here

# Theme IDs
SHOPIFY_PRODUCTION_THEME_ID=your_production_theme_id
SHOPIFY_STAGING_THEME_ID=your_staging_theme_id

# Optional: Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Backend API (if using OneCommerce backend)
BACKEND_API_KEY=your_api_key_here
BACKEND_API_URL=https://api.1commerce.shop/v1

# Shopify Customer Account API Configuration
# Required for customer authentication and account management
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=your_client_id_here
PUBLIC_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/your_shop_id

# Shopify Storefront Configuration
PUBLIC_STORE_DOMAIN=your-store.myshopify.com
PUBLIC_STOREFRONT_API_TOKEN=your_storefront_api_token_here
PRIVATE_STOREFRONT_API_TOKEN=your_private_storefront_api_token_here
PUBLIC_STOREFRONT_ID=your_storefront_id_here

# Shop Configuration
SHOP_ID=your_shop_id_here

# Session Management
# Generate a secure random string for production use
SESSION_SECRET=your_secure_session_secret_here
